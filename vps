}

# Function to show Proxmox info
show_proxmox_info() {
    echo
    print_status "INFO" "ğŸ“Š Proxmox VE Information"
    echo "ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹"
    echo "ğŸŒ OS: Proxmox VE (Docker)"
    echo "ğŸ·ï¸  Hostname: pve"
    echo "ğŸ‘¤ Username: root"
    echo "ğŸ”‘ Password: proxmox"
    echo "ğŸ”Œ Web Port: 8006"
    echo "ğŸŒ Access URL: https://localhost:8006"
    
    # Check if container exists and is running
    if docker ps -a --format '{{.Names}}' | grep -q "^proxmoxve$"; then
        if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
            echo "ğŸš€ Status: Running"
            
            # Get container stats
            local stats=$(docker stats proxmoxve --no-stream --format "table {{.CPUPerc}}\t{{.MemUsage}}" | tail -1)
            echo "ğŸ“Š Resource Usage: $stats"
        else
            echo "ğŸ’¤ Status: Stopped"
        fi
    else
        echo "âŒ Status: Not created"
    fi
    
    echo "ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹"
    echo
    read -p "$(print_status "INPUT" "â Press Enter to continue...")"
}

# Function to check if VM is running
is_vm_running() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
            return 0
        fi
        return 1
    fi
    
    if load_vm_config "$vm_name" 2>/dev/null; then
        if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
            return 0
        fi
    fi
    
    return 1
}

# Function to stop a running VM
stop_vm() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        stop_proxmox_docker
        return $?
    fi
    
    if load_vm_config "$vm_name" 2>/dev/null; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "ğŸ›‘ Stopping VM: $vm_name"
            
            # Try graceful shutdown via monitor
            local monitor_sock="/tmp/qemu-${vm_name}-monitor.sock"
            if [[ -S "$monitor_sock" ]]; then
                echo "system_powerdown" | socat - "$monitor_sock" 2>/dev/null
                sleep 5
            fi
            
            # Try graceful shutdown via signal
            pkill -f "qemu-system.*$IMG_FILE" || true
            sleep 3
            
            # Check if it stopped
            if is_vm_running "$vm_name"; then
                print_status "WARN" "âš ï¸  VM did not stop gracefully, forcing termination..."
                pkill -9 -f "qemu-system.*$IMG_FILE" || true
                sleep 1
            fi
            
            # Clean up lock files and monitor socket
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
            
            if is_vm_running "$vm_name"; then
                print_status "ERROR" "âŒ Failed to stop VM"
                return 1
            else
                print_status "SUCCESS" "âœ… VM $vm_name stopped"
            fi
        else
            print_status "INFO" "ğŸ’¤ VM $vm_name is not running"
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
        fi
    fi
}

# Function to stop Proxmox Docker container
stop_proxmox_docker() {
    if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
        print_status "INFO" "ğŸ›‘ Stopping Proxmox container..."
        docker stop proxmoxve
        if [ $? -eq 0 ]; then
            print_status "SUCCESS" "âœ… Proxmox container stopped"
        else
            print_status "ERROR" "âŒ Failed to stop Proxmox container"
        fi
    else
        print_status "INFO" "ğŸ’¤ Proxmox container is not running"
    fi
}

# Function to edit VM configuration
edit_vm_config() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        print_status "INFO" "âœï¸  Editing VM: $vm_name"
        
        while true; do
            echo "ğŸ“ What would you like to edit?"
            echo "  1) ğŸ·ï¸  Hostname"
            echo "  2) ğŸ‘¤ Username"
            echo "  3) ğŸ”‘ Password"
            echo "  4) ğŸ”Œ SSH Port"
            echo "  5) ğŸ–¥ï¸  GUI Mode"
            echo "  6) ğŸŒ Port Forwards"
            echo "  7) ğŸ§  Memory (RAM)"
            echo "  8) âš¡ CPU Count"
            echo "  9) ğŸ’¾ Disk Size"
            echo "  0) â†©ï¸  Back to main menu"
            
            read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice: ")" edit_choice
            
            case $edit_choice in
                1)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ·ï¸  Enter new hostname (current: $HOSTNAME): ")" new_hostname
                        new_hostname="${new_hostname:-$HOSTNAME}"
                        if validate_input "name" "$new_hostname"; then
                            HOSTNAME="$new_hostname"
                            break
                        fi
                    done
                    ;;
                2)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ‘¤ Enter new username (current: $USERNAME): ")" new_username
                        new_username="${new_username:-$USERNAME}"
                        if validate_input "username" "$new_username"; then
                            USERNAME="$new_username"
                            break
                        fi
                    done
                    ;;
                3)
                    while true; do
                        read -s -p "$(print_status "INPUT" "ğŸ”‘ Enter new password (current: ****): ")" new_password
                        echo
                        new_password="${new_password:-$PASSWORD}"
                        if [ -n "$new_password" ]; then
                            PASSWORD="$new_password"
                            break
                        else
                            print_status "ERROR" "âŒ Password cannot be empty"
                        fi
                    done
                    ;;
                4)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ”Œ Enter new SSH port (current: $SSH_PORT): ")" new_ssh_port
                        new_ssh_port="${new_ssh_port:-$SSH_PORT}"
                        if validate_input "port" "$new_ssh_port"; then
                            # Check if port is already in use
                            if [ "$new_ssh_port" != "$SSH_PORT" ] && ss -tln 2>/dev/null | grep -q ":$new_ssh_port "; then
                                print_status "ERROR" "ğŸš« Port $new_ssh_port is already in use"
                            else
                                SSH_PORT="$new_ssh_port"
                                break
                            fi
                        fi
                    done
                    ;;
                5)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enable GUI mode? (y/n, current: $GUI_MODE): ")" gui_input
                        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
                            GUI_MODE=true
                            break
                        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
                            GUI_MODE=false
                            break
                        elif [ -z "$gui_input" ]; then
                            break
                        else
                            print_status "ERROR" "âŒ Please answer y or n"
                        fi
                    done
                    ;;
                6)
                    read -p "$(print_status "INPUT" "ğŸŒ Additional port forwards (current: ${PORT_FORWARDS:-None}): ")" new_port_forwards
                    PORT_FORWARDS="${new_port_forwards:-$PORT_FORWARDS}"
                    ;;
                7)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ§  Enter new memory in MB (current: $MEMORY): ")" new_memory
                        new_memory="${new_memory:-$MEMORY}"
                        if validate_input "number" "$new_memory"; then
                            MEMORY="$new_memory"
                            break
                        fi
                    done
                    ;;
                8)
                    while true; do
                        read -p "$(print_status "INPUT" "âš¡ Enter new CPU count (current: $CPUS): ")" new_cpus
                        new_cpus="${new_cpus:-$CPUS}"
                        if validate_input "number" "$new_cpus"; then
                            CPUS="$new_cpus"
                            break
                        fi
                    done
                    ;;
                9)
                    while true; do
                        read -p "$(print_status "INPUT" "ğŸ’¾ Enter new disk size (current: $DISK_SIZE): ")" new_disk_size
                        new_disk_size="${new_disk_size:-$DISK_SIZE}"
                        if validate_input "size" "$new_disk_size"; then
                            DISK_SIZE="$new_disk_size"
                            break
                        fi
                    done
                    ;;
                0)
                    return 0
                    ;;
                *)
                    print_status "ERROR" "âŒ Invalid selection"
                    continue
                    ;;
            esac
            
            # Recreate seed image with new configuration if user/password/hostname changed
            if [[ "$edit_choice" -eq 1 || "$edit_choice" -eq 2 || "$edit_choice" -eq 3 ]]; then
                print_status "INFO" "ğŸ”„ Updating cloud-init configuration..."
                setup_vm_image
            fi
            
            # Save configuration
            save_vm_config
            
            read -p "$(print_status "INPUT" "ğŸ”„ Continue editing? (y/N): ")" continue_editing
            if [[ ! "$continue_editing" =~ ^[Yy]$ ]]; then
                break
            fi
        done
    fi
}

# Function to resize VM disk
resize_vm_disk() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        # Check if VM is running
        if is_vm_running "$vm_name"; then
            print_status "ERROR" "âŒ Cannot resize disk while VM is running. Please stop the VM first."
            return 1
        fi
        
        print_status "INFO" "ğŸ’¾ Current disk size: $DISK_SIZE"
        
        while true; do
            read -p "$(print_status "INPUT" "ğŸ“ˆ Enter new disk size (e.g., 50G): ")" new_disk_size
            if validate_input "size" "$new_disk_size"; then
                if [[ "$new_disk_size" == "$DISK_SIZE" ]]; then
                    print_status "INFO" "â„¹ï¸  New disk size is the same as current size. No changes made."
                    return 0
                fi
                
                # Resize the disk
                print_status "INFO" "ğŸ“ˆ Resizing disk to $new_disk_size..."
                if qemu-img resize "$IMG_FILE" "$new_disk_size"; then
                    DISK_SIZE="$new_disk_size"
                    save_vm_config
                    print_status "SUCCESS" "âœ… Disk resized successfully to $new_disk_size"
                else
                    print_status "ERROR" "âŒ Failed to resize disk"
                    return 1
                fi
                break
            fi
        done
    fi
}

# Function to show VM performance
show_vm_performance() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        show_proxmox_performance
        return $?
    fi
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "ğŸ“Š Performance metrics for VM: $vm_name"
            echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
            
            # Get QEMU process ID
            local qemu_pid=$(pgrep -f "qemu-system.*$IMG_FILE" | head -1)
            if [[ -n "$qemu_pid" ]]; then
                # Show process stats
                echo "âš¡ QEMU Process Stats:"
                ps -p "$qemu_pid" -o pid,%cpu,%mem,sz,rss,vsz,cmd --no-headers 2>/dev/null || echo "Process stats unavailable"
                echo
                
                # Show disk usage
                echo "ğŸ’¾ Disk Usage:"
                if command -v du &> /dev/null; then
                    du -h "$IMG_FILE" 2>/dev/null || echo "Disk info unavailable"
                fi
                echo
            else
                print_status "ERROR" "âŒ Could not find QEMU process for VM $vm_name"
            fi
        else
            print_status "INFO" "ğŸ’¤ VM $vm_name is not running"
            echo "âš™ï¸  Configuration:"
            echo "  ğŸ§  Memory: $MEMORY MB"
            echo "  âš¡ CPUs: $CPUS"
            echo "  ğŸ’¾ Disk: $DISK_SIZE"
        fi
        echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
        read -p "$(print_status "INPUT" "â Press Enter to continue...")"
    fi
}

# Function to show Proxmox performance
show_proxmox_performance() {
    if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
        print_status "INFO" "ğŸ“Š Proxmox Container Performance"
        echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
        
        # Get container stats
        docker stats proxmoxve --no-stream --format "table {{.Name}}\t{{.CPUPerc}}\t{{.MemUsage}}\t{{.NetIO}}\t{{.BlockIO}}"
        
        echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
    else
        print_status "INFO" "ğŸ’¤ Proxmox container is not running"
    fi
    read -p "$(print_status "INPUT" "â Press Enter to continue...")"
}

# Function to fix VM issues
fix_vm_issues() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        fix_proxmox_issues
        return $?
    fi
    
    if load_vm_config "$vm_name"; then
        print_status "INFO" "ğŸ”§ Fixing issues for VM: $vm_name"
        
        echo "ğŸ”§ Select issue to fix:"
        echo "  1) ğŸ”“ Remove lock files"
        echo "  2) ğŸ—‘ï¸  Recreate seed image"
        echo "  3) ğŸ”„ Recreate configuration"
        echo "  4) ğŸ’€ Kill stuck processes"
        echo "  0) â†©ï¸  Back"
        
        read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice: ")" fix_choice
        
        case $fix_choice in
            1)
                print_status "INFO" "ğŸ”“ Removing lock files..."
                rm -f "${IMG_FILE}.lock" 2>/dev/null
                rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
                print_status "SUCCESS" "âœ… Lock files removed"
                ;;
            2)
                print_status "INFO" "ğŸ”„ Recreating seed image..."
                if [[ -f "$SEED_FILE" ]]; then
                    rm -f "$SEED_FILE"
                fi
                setup_vm_image
                print_status "SUCCESS" "âœ… Seed image recreated"
                ;;
            3)
                print_status "INFO" "ğŸ”„ Recreating configuration..."
                save_vm_config
                print_status "SUCCESS" "âœ… Configuration recreated"
                ;;
            4)
                print_status "INFO" "ğŸ’€ Killing stuck processes..."
                pkill -f "qemu-system.*$IMG_FILE" 2>/dev/null || true
                sleep 1
                if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
                    pkill -9 -f "qemu-system.*$IMG_FILE" 2>/dev/null || true
                    print_status "SUCCESS" "âœ… Forcefully killed stuck processes"
                else
                    print_status "INFO" "ğŸ’¤ No stuck processes found"
                fi
                rm -f "${IMG_FILE}.lock" 2>/dev/null
                rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
                ;;
            0)
                return 0
                ;;
            *)
                print_status "ERROR" "âŒ Invalid selection"
                ;;
        esac
    fi
}

# Function to fix Proxmox issues
fix_proxmox_issues() {
    print_status "INFO" "ğŸ”§ Fixing Proxmox container issues..."
    
    echo "ğŸ”§ Select issue to fix:"
    echo "  1) ğŸ”„ Restart container"
    echo "  2) ğŸ“¦ Recreate container"
    echo "  3) ğŸ’€ Kill stuck container"
    echo "  4) ğŸ“‹ Show container logs"
    echo "  0) â†©ï¸  Back"
    
    read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice: ")" fix_choice
    
    case $fix_choice in
        1)
            print_status "INFO" "ğŸ”„ Restarting Proxmox container..."
            docker restart proxmoxve
            print_status "SUCCESS" "âœ… Container restarted"
            ;;
        2)
            print_status "WARN" "âš ï¸  This will delete and recreate the Proxmox container"
            read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Are you sure? (y/N): ")" -n 1 -r
            echo
            if [[ $REPLY =~ ^[Yy]$ ]]; then
                delete_proxmox_docker
                start_proxmox_docker "proxmox"
            fi
            ;;
        3)
            print_status "INFO" "ğŸ’€ Killing stuck container..."
            docker kill proxmoxve 2>/dev/null
            docker rm proxmoxve 2>/dev/null
            print_status "SUCCESS" "âœ… Container removed"
            ;;
        4)
            print_status "INFO" "ğŸ“‹ Showing container logs..."
            docker logs --tail 50 proxmoxve
            ;;
        0)
            return 0
            ;;
        *)
            print_status "ERROR" "âŒ Invalid selection"
            ;;
    esac
}

# Function to show running VMs menu
show_running_vms_menu() {
    local running_vms=($(get_running_vm_list))
    local running_count=${#running_vms[@]}
    
    if [ $running_count -gt 0 ]; then
        echo
        print_status "INFO" "ğŸš€ Currently running VMs ($running_count):"
        for i in "${!running_vms[@]}"; do
            printf "  %2d) %s\n" $((i+1)) "${running_vms[$i]}"
        done
        echo
    fi
}

# Function to get SSH port for a VM
get_ssh_port() {
    local vm_name=$1
    if load_vm_config "$vm_name" 2>/dev/null; then
        echo "$SSH_PORT"
    else
        echo "unknown"
    fi
}

# Function to create Proxmox VM (special case)
create_proxmox_vm() {
    print_status "INFO" "ğŸ³ Setting up Proxmox VE in Docker container..."
    
    VM_NAME="proxmoxve"
    HOSTNAME="pve"
    USERNAME="root"
    PASSWORD="proxmox"
    SSH_PORT="8006"
    GUI_MODE=false
    CREATED="$(date)"
    
    # Check if already exists
    if [[ -f "$VM_DIR/$VM_NAME.conf" ]]; then
        print_status "WARN" "âš ï¸  Proxmox configuration already exists"
        read -p "$(print_status "INPUT" "ğŸ”„ Do you want to recreate it? (y/N): ")" recreate
        if [[ "$recreate" =~ ^[Yy]$ ]]; then
            delete_proxmox_docker
        else
            return 1
        fi
    fi
    
    # Save configuration
    save_vm_config
    
    print_status "SUCCESS" "ğŸ‰ Proxmox VE setup created successfully."
    print_status "INFO" "ğŸ”‘ Login with: username=root, password=proxmox"
    print_status "INFO" "ğŸŒ Web UI: https://localhost:8006"
    
    # Ask if user wants to start it now
    read -p "$(print_status "INPUT" "ğŸš€ Do you want to start Proxmox now? (y/N): ")" start_now
    if [[ "$start_now" =~ ^[Yy]$ ]]; then
        start_proxmox_docker "$VM_NAME"
    fi
}

# Main menu function
main_menu() {
    while true; do
        display_header
        
        local vms=($(get_vm_list))
        local vm_count=${#vms[@]}
        local running_vms=($(get_running_vm_list))
        local running_count=${#running_vms[@]}
        
        if [ $vm_count -gt 0 ]; then
            print_status "INFO" "ğŸ“ Found $vm_count existing VM(s):"
            for i in "${!vms[@]}"; do
                local status="ğŸ’¤"
                if is_vm_running "${vms[$i]}"; then
                    status="ğŸš€"
                fi
                printf "  %2d) %s %s\n" $((i+1)) "${vms[$i]}" "$status"
            done
            echo
        fi
        
        echo "ğŸ“‹ Main Menu:"
        echo "  1) ğŸ†• Create a new VM"
        echo "  2) ğŸ³ Create Proxmox VE (Docker)"
        if [ $vm_count -gt 0 ]; then
            echo "  3) ğŸš€ Start a VM"
            echo "  4) ğŸ›‘ Stop a VM"
            echo "  5) ğŸ”Œ Connect to VM (SSH)"
            echo "  6) ğŸ–¥ï¸  Connect to VM (GUI/Console)"
            echo "  7) ğŸ“Š Show VM info"
            echo "  8) âœï¸  Edit VM configuration"
            echo "  9) ğŸ—‘ï¸  Delete a VM"
            echo " 10) ğŸ“ˆ Resize VM disk"
            echo " 11) ğŸ“Š Show VM performance"
            echo " 12) ğŸ”§ Fix VM issues"
        fi
        echo "  0) ğŸ‘‹ Exit"
        echo
        
        read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice: ")" choice
        
        case $choice in
            1)
                create_new_vm
                ;;
            2)
                create_proxmox_vm
                ;;
            3)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸš€ Enter VM number to start: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        start_vm "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            4)
                if [ $vm_count -gt 0 ]; then
                    if [ $running_count -gt 0 ]; then
                        show_running_vms_menu
                        read -p "$(print_status "INPUT" "ğŸ›‘ Enter VM number to stop: ")" vm_num
                        if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $running_count ]; then
                            stop_vm "${running_vms[$((vm_num-1))]}"
                        else
                            print_status "ERROR" "âŒ Invalid selection"
                        fi
                    else
                        print_status "INFO" "ğŸ’¤ No running VMs to stop"
                        sleep 2
                    fi
                fi
                ;;
            5)
                if [ $vm_count -gt 0 ]; then
                    if [ $running_count -gt 0 ]; then
                        show_running_vms_menu
                        read -p "$(print_status "INPUT" "ğŸ”Œ Enter VM number to connect (SSH): ")" vm_num
                        if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $running_count ]; then
                            connect_to_vm "${running_vms[$((vm_num-1))]}"
                        else
                            print_status "ERROR" "âŒ Invalid selection"
                        fi
                    else
                        print_status "INFO" "ğŸ’¤ No running VMs. Please start a VM first."
                        sleep 2
                    fi
                fi
                ;;
            6)
                if [ $vm_count -gt 0 ]; then
                    if [ $running_count -gt 0 ]; then
                        show_running_vms_menu
                        read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enter VM number to connect (GUI/Console): ")" vm_num
                        if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $running_count ]; then
                            connect_to_vm_gui "${running_vms[$((vm_num-1))]}"
                        else
                            print_status "ERROR" "âŒ Invalid selection"
                        fi
                    else
                        print_status "INFO" "ğŸ’¤ No running VMs to connect to"
                        sleep 2
                    fi
                fi
                ;;
            7)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸ“Š Enter VM number to show info: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        show_vm_info "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            8)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "âœï¸  Enter VM number to edit: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        edit_vm_config "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            9)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Enter VM number to delete: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        delete_vm "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            10)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸ“ˆ Enter VM number to resize disk: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        resize_vm_disk "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            11)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸ“Š Enter VM number to show performance: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        show_vm_performance "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            12)
                if [ $vm_count -gt 0 ]; then
                    read -p "$(print_status "INPUT" "ğŸ”§ Enter VM number to fix issues: ")" vm_num
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        fix_vm_issues "${vms[$((vm_num-1))]}"
                    else
                        print_status "ERROR" "âŒ Invalid selection"
                    fi
                fi
                ;;
            0)
                print_status "INFO" "ğŸ‘‹ Goodbye!"
                exit 0
                ;;
            *)
                print_status "ERROR" "âŒ Invalid option"
                ;;
        esac
        
        if [ $? -eq 0 ]; then
            read -p "$(print_status "INPUT" "â Press Enter to continue...")"
        fi
    done
}

# Set trap to cleanup on exit
trap cleanup EXIT

# Check dependencies
check_dependencies

# Initialize paths
VM_DIR="${VM_DIR:-$HOME/vms}"
mkdir -p "$VM_DIR"

# Check for mkpasswd or openssl for password hashing
if ! command -v mkpasswd &> /dev/null && ! command -v openssl &> /dev/null; then
    print_status "WARN" "âš ï¸ Neither mkpasswd nor openssl found. Installing whois package for mkpasswd..."
    sudo apt install whois -y || true
fi

