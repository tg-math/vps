#!/bin/bash

# =============================
# Enhanced Multi-VM Manager with Proxmox Docker Support
# =============================

# Function to display header
display_header() {
    clear
    cat << "EOF2"
â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— 
â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘
   â•šâ•â•   â•šâ•â•â•šâ•â•     â•šâ•â•â•šâ•â•  â•šâ•â•
                               
           Tima VM              
EOF2
    echo
}

# Function to display colored output with emojis
print_status() {
    local type=$1
    local message=$2
    
    case $type in
        "INFO") echo -e "\033[1;34mğŸ“‹ [INFO]\033[0m $message" ;;
        "WARN") echo -e "\033[1;33mâš ï¸  [WARN]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31mâŒ [ERROR]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32mâœ… [SUCCESS]\033[0m $message" ;;
        "INPUT") echo -e "\033[1;36mğŸ¯ [INPUT]\033[0m $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to check if image file is locked
check_image_lock() {
    local img_file=$1
    local vm_name=$2
    
    # Check if QEMU is already using this image
    if lsof "$img_file" 2>/dev/null | grep -q qemu-system; then
        print_status "WARN" "ğŸ”’ Image file $img_file is already in use by another QEMU process"
        
        # Find the process ID
        local pid=$(lsof "$img_file" 2>/dev/null | grep qemu-system | awk '{print $2}' | head -1)
        if [[ -n "$pid" ]]; then
            print_status "INFO" "ğŸ” Process ID using the image: $pid"
            return 1
        fi
    fi
    
    # Check for lock files
    local lock_file="${img_file}.lock"
    if [[ -f "$lock_file" ]]; then
        print_status "WARN" "ğŸ”’ Lock file found: $lock_file"
        return 1
    fi
    return 0
}

# Function to validate input
validate_input() {
    local type=$1
    local value=$2
    
    case $type in
        "number")
            if ! [[ "$value" =~ ^[0-9]+$ ]]; then
                print_status "ERROR" "âŒ Must be a number"
                return 1
            fi
            ;;
        "size")
            if ! [[ "$value" =~ ^[0-9]+[GgMm]$ ]]; then
                print_status "ERROR" "âŒ Must be a size with unit (e.g., 100G, 512M)"
                return 1
            fi
            ;;
        "port")
            if ! [[ "$value" =~ ^[0-9]+$ ]] || [ "$value" -lt 22 ] || [ "$value" -gt 65535 ]; then
                print_status "ERROR" "âŒ Must be a valid port number (22-65535)"
                return 1
            fi
            ;;
        "name")
            if ! [[ "$value" =~ ^[a-zA-Z0-9_-]+$ ]]; then
                print_status "ERROR" "âŒ VM name can only contain letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
        "username")
            if ! [[ "$value" =~ ^[a-z_][a-z0-9_-]*$ ]]; then
                print_status "ERROR" "âŒ Username must start with a letter or underscore, and contain only letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
    esac
    return 0
}

# Function to check dependencies
check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "cloud-localds" "qemu-img" "lsof" "ssh" "socat" "docker")
    local missing_deps=()
    
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            missing_deps+=("$dep")
        fi
    done
    
    if [ ${#missing_deps[@]} -ne 0 ]; then
        print_status "ERROR" "ğŸ”§ Missing dependencies: ${missing_deps[*]}"
        print_status "INFO" "ğŸ’¡ On Ubuntu/Debian, try: sudo apt install qemu-system cloud-image-utils wget lsof openssh-client socat docker.io"
        exit 1
    fi
}

# Function to cleanup temporary files
cleanup() {
    if [ -f "user-data" ]; then rm -f "user-data"; fi
    if [ -f "meta-data" ]; then rm -f "meta-data"; fi
}

# Function to get all VM configurations
get_vm_list() {
    if [ -d "$VM_DIR" ]; then
        find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null | sort
    fi
}

# Function to get only running VMs
get_running_vm_list() {
    local all_vms=($(get_vm_list))
    local running_vms=()
    
    for vm in "${all_vms[@]}"; do
        if is_vm_running "$vm"; then
            running_vms+=("$vm")
        fi
    done
    
    echo "${running_vms[@]}"
}

# Function to load VM configuration
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    
    if [[ -f "$config_file" ]]; then
        # Clear previous variables
        unset VM_NAME OS_TYPE CODENAME IMG_URL HOSTNAME USERNAME PASSWORD
        unset DISK_SIZE MEMORY CPUS SSH_PORT GUI_MODE PORT_FORWARDS IMG_FILE SEED_FILE CREATED
        
        source "$config_file"
        return 0
    else
        print_status "ERROR" "ğŸ“‚ Configuration for VM '$vm_name' not found"
        return 1
    fi
}

# Function to save VM configuration
save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
CODENAME="$CODENAME"
IMG_URL="$IMG_URL"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
PORT_FORWARDS="$PORT_FORWARDS"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
CREATED="$CREATED"
EOF
    
    print_status "SUCCESS" "ğŸ’¾ Configuration saved to $config_file"
}

# Function to connect to a running VM via SSH
connect_to_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "ğŸ”Œ Connecting to $vm_name via SSH on port $SSH_PORT..."
            print_status "INFO" "ğŸ‘¤ Username: $USERNAME"
            print_status "INFO" "ğŸ”‘ Password: $PASSWORD"
            print_status "INFO" "ğŸ’¡ Type 'exit' to close the SSH session"
            echo
            
            # Wait a moment for SSH to be ready
            sleep 2
            
            # Try to connect via SSH
            ssh -p "$SSH_PORT" -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ConnectTimeout=10 "$USERNAME@localhost"
            
            if [ $? -ne 0 ]; then
                print_status "ERROR" "âŒ Failed to connect via SSH"
                print_status "INFO" "ğŸ” Make sure the VM is fully booted and SSH service is running"
                print_status "INFO" "ğŸ”„ You can try again in a few seconds"
            fi
        else
            print_status "ERROR" "âŒ VM '$vm_name' is not running"
            read -p "$(print_status "INPUT" "ğŸš€ Do you want to start it now? (y/N): ")" start_choice
            if [[ "$start_choice" =~ ^[Yy]$ ]]; then
                start_vm "$vm_name"
            fi
        fi
    fi
}

# Function to connect to VM via VNC/SPICE
connect_to_vm_gui() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            if [[ "$GUI_MODE" == true ]]; then
                print_status "INFO" "ğŸ–¥ï¸  VM $vm_name is already running in GUI mode"
                print_status "INFO" "ğŸ“Œ Check your window manager for the QEMU window"
            else
                print_status "INFO" "ğŸ–¥ï¸  VM $vm_name is running in console mode"
                print_status "INFO" "ğŸ“Œ You can connect to it via the serial console"
                reconnect_to_console "$vm_name"
            fi
        else
            print_status "ERROR" "âŒ VM '$vm_name' is not running"
        fi
    fi
}

# Function to reconnect to console mode VM
reconnect_to_console() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        local qemu_pid=$(pgrep -f "qemu-system.*$IMG_FILE.*-nographic")
        if [[ -n "$qemu_pid" ]]; then
            print_status "INFO" "ğŸ“Ÿ Reconnecting to console of $vm_name..."
            print_status "INFO" "ğŸ›‘ Press Ctrl+A then X to exit the console"
            
            # Try to reconnect to the console via the monitor socket
            local monitor_sock="/tmp/qemu-${vm_name}-monitor.sock"
            if [[ -S "$monitor_sock" ]]; then
                echo "sendkey ctrl-alt-f1" | socat - "$monitor_sock" 2>/dev/null
                print_status "INFO" "ğŸ’¡ The console is attached to the terminal where you started the VM"
                print_status "INFO" "ğŸ“‹ To view the console, check the terminal where you ran 'Start VM'"
            else
                print_status "ERROR" "âŒ Cannot reconnect to detached console"
                print_status "INFO" "ğŸ’¡ Console is attached to the original terminal"
            fi
        else
            print_status "ERROR" "âŒ No console mode VM found for $vm_name"
        fi
    fi
}

# Function to create new VM
create_new_vm() {
    print_status "INFO" "ğŸ†• Creating a new VM"
    
    # OS Selection
    print_status "INFO" "ğŸŒ Select an OS to set up:"
    local os_options=()
    local i=1
    for os in "${!OS_OPTIONS[@]}"; do
        echo "  $i) $os"
        os_options[$i]="$os"
        ((i++))
    done
    
    while true; do
        read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice (1-${#OS_OPTIONS[@]}): ")" choice
        if [[ "$choice" =~ ^[0-9]+$ ]] && [ "$choice" -ge 1 ] && [ "$choice" -le ${#OS_OPTIONS[@]} ]; then
            local os="${os_options[$choice]}"
            # Parse: OS_TYPE|CODENAME|IMG_URL|DEFAULT_HOSTNAME|DEFAULT_USERNAME|DEFAULT_PASSWORD|DEFAULT_DISK|DEFAULT_MEM|DEFAULT_CPU
            IFS='|' read -r OS_TYPE CODENAME IMG_URL DEFAULT_HOSTNAME DEFAULT_USERNAME DEFAULT_PASSWORD DEFAULT_DISK DEFAULT_MEM DEFAULT_CPU <<< "${OS_OPTIONS[$os]}"
            break
        else
            print_status "ERROR" "âŒ Invalid selection. Try again."
        fi
    done

    # Custom Inputs with validation
    while true; do
        read -p "$(print_status "INPUT" "ğŸ·ï¸  Enter VM name (default: $DEFAULT_HOSTNAME): ")" VM_NAME
        VM_NAME="${VM_NAME:-$DEFAULT_HOSTNAME}"
        if validate_input "name" "$VM_NAME"; then
            # Check if VM name already exists
            if [[ -f "$VM_DIR/$VM_NAME.conf" ]]; then
                print_status "ERROR" "âš ï¸  VM with name '$VM_NAME' already exists"
            else
                break
            fi
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ  Enter hostname (default: $VM_NAME): ")" HOSTNAME
        HOSTNAME="${HOSTNAME:-$VM_NAME}"
        if validate_input "name" "$HOSTNAME"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ‘¤ Enter username (default: $DEFAULT_USERNAME): ")" USERNAME
        USERNAME="${USERNAME:-$DEFAULT_USERNAME}"
        if validate_input "username" "$USERNAME"; then
            break
        fi
    done

    while true; do
        read -s -p "$(print_status "INPUT" "ğŸ”‘ Enter password (default: $DEFAULT_PASSWORD): ")" PASSWORD
        PASSWORD="${PASSWORD:-$DEFAULT_PASSWORD}"
        echo
        if [ -n "$PASSWORD" ]; then
            break
        else
            print_status "ERROR" "âŒ Password cannot be empty"
        fi
    done

    # Hardware defaults logic
    local SUGGESTED_DISK="${DEFAULT_DISK:-20G}"
    local SUGGESTED_MEM="${DEFAULT_MEM:-2048}"
    local SUGGESTED_CPU="${DEFAULT_CPU:-2}"

    while true; do
        read -p "$(print_status "INPUT" "ğŸ’¾ Disk size (default: $SUGGESTED_DISK): ")" DISK_SIZE
        DISK_SIZE="${DISK_SIZE:-$SUGGESTED_DISK}"
        if validate_input "size" "$DISK_SIZE"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ§  Memory in MB (default: $SUGGESTED_MEM): ")" MEMORY
        MEMORY="${MEMORY:-$SUGGESTED_MEM}"
        if validate_input "number" "$MEMORY"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "âš¡ Number of CPUs (default: $SUGGESTED_CPU): ")" CPUS
        CPUS="${CPUS:-$SUGGESTED_CPU}"
        if validate_input "number" "$CPUS"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ”Œ SSH Port (default: 2222): ")" SSH_PORT
        SSH_PORT="${SSH_PORT:-2222}"
        if validate_input "port" "$SSH_PORT"; then
            # Check if port is already in use
            if ss -tln 2>/dev/null | grep -q ":$SSH_PORT "; then
                print_status "ERROR" "ğŸš« Port $SSH_PORT is already in use"
            else
                break
            fi
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enable GUI mode? (y/n, default: n): ")" gui_input
        gui_input="${gui_input:-n}"
        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
            GUI_MODE=true
            break
        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
            GUI_MODE=false
            break
        else
            print_status "ERROR" "âŒ Please answer y or n"
        fi
    done

    # Additional network options
    read -p "$(print_status "INPUT" "ğŸŒ Additional port forwards (e.g., 8080:80, press Enter for none): ")" PORT_FORWARDS

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
    CREATED="$(date)"

    # Download and setup VM image
    setup_vm_image
    
    # Save configuration
    save_vm_config
}

# Function to setup VM image
setup_vm_image() {
    print_status "INFO" "ğŸ“¥ Downloading and preparing image..."
    
    # Create VM directory if it doesn't exist
    mkdir -p "$VM_DIR"
    
    # Check if image already exists
    if [[ -f "$IMG_FILE" ]]; then
        print_status "INFO" "âœ… Image file already exists. Skipping download."
    else
        print_status "INFO" "ğŸŒ Downloading image from $IMG_URL..."
        if ! wget --progress=bar:force "$IMG_URL" -O "$IMG_FILE.tmp"; then
            print_status "ERROR" "âŒ Failed to download image from $IMG_URL"
            exit 1
        fi
        mv "$IMG_FILE.tmp" "$IMG_FILE"
    fi
    
    # Resize the disk image if needed
    if ! qemu-img resize "$IMG_FILE" "$DISK_SIZE" 2>/dev/null; then
        print_status "WARN" "âš ï¸  Failed to resize disk image. Creating new image with specified size..."
        # Create a new backing image
        local temp_img="$IMG_FILE.tmp.$$"
        if qemu-img create -f qcow2 -b "$IMG_FILE" -F qcow2 "$temp_img" "$DISK_SIZE" 2>/dev/null; then
            mv "$temp_img" "$IMG_FILE"
        else
            qemu-img create -f qcow2 "$IMG_FILE" "$DISK_SIZE"
        fi
    fi

    # cloud-init configuration
    cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
disable_root: false
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(echo "$PASSWORD" | mkpasswd -m sha-512 --stdin 2>/dev/null || echo "$PASSWORD" | openssl passwd -6 -stdin)
chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false
EOF

    cat > meta-data <<EOF
instance-id: iid-$VM_NAME
local-hostname: $HOSTNAME
EOF

    if ! cloud-localds "$SEED_FILE" user-data meta-data; then
        print_status "ERROR" "âŒ Failed to create cloud-init seed image"
        exit 1
    fi
    
    print_status "SUCCESS" "ğŸ‰ VM '$VM_NAME' created successfully."
    print_status "INFO" "ğŸ”‘ Login with: username=$USERNAME, password=$PASSWORD"
    print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"
}

# Function to start a VM (Pure QEMU version without KVM)
start_vm() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        start_proxmox_docker "$vm_name"
        return $?
    fi
    
    if load_vm_config "$vm_name"; then
        # Check if image is already in use
        if ! check_image_lock "$IMG_FILE" "$vm_name"; then
            print_status "ERROR" "ğŸ”’ Cannot start VM: Image file is locked by another process"
            read -p "$(print_status "INPUT" "ğŸ”„ Do you want to force kill all QEMU processes using this image? (y/N): ")" force_kill
            if [[ "$force_kill" =~ ^[Yy]$ ]]; then
                pkill -f "qemu-system.*$IMG_FILE" || true
                sleep 2
                if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
                    pkill -9 -f "qemu-system.*$IMG_FILE" || true
                fi
                print_status "SUCCESS" "âœ… Terminated processes using the image"
                rm -f "${IMG_FILE}.lock" 2>/dev/null
                rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
            else
                return 1
            fi
        fi
        
        # Check if VM is already running
        if is_vm_running "$vm_name"; then
            print_status "WARN" "âš ï¸  VM '$vm_name' is already running"
            read -p "$(print_status "INPUT" "ğŸ”„ Stop and restart? (y/N): ")" restart_choice
            if [[ "$restart_choice" =~ ^[Yy]$ ]]; then
                stop_vm "$vm_name"
                sleep 2
            else
                return 1
            fi
        fi
        
        print_status "INFO" "ğŸš€ Starting VM: $vm_name"
        print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"
        print_status "INFO" "ğŸ”‘ Password: $PASSWORD"
        
        # Check if image file exists
        if [[ ! -f "$IMG_FILE" ]]; then
            print_status "ERROR" "âŒ VM image file not found: $IMG_FILE"
            return 1
        fi
        
        # Check if seed file exists
        if [[ ! -f "$SEED_FILE" ]]; then
            print_status "WARN" "âš ï¸  Seed file not found, recreating..."
            setup_vm_image
        fi
        
        # Pure QEMU command without KVM
        local qemu_cmd=(
            qemu-system-x86_64
            -m "$MEMORY"
            -smp "$CPUS"
            -cpu qemu64
            -machine type=pc,accel=tcg
            -drive "file=$IMG_FILE,format=qcow2,if=virtio"
            -drive "file=$SEED_FILE,format=raw,if=virtio"
            -boot order=c
            -device virtio-net-pci,netdev=n0
            -netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22"
            -monitor "unix:/tmp/qemu-${vm_name}-monitor.sock,server,nowait"
        )

        # Add port forwards if specified
        if [[ -n "$PORT_FORWARDS" ]]; then
            IFS=',' read -ra forwards <<< "$PORT_FORWARDS"
            for forward in "${forwards[@]}"; do
                IFS=':' read -r host_port guest_port <<< "$forward"
                qemu_cmd+=(-device "virtio-net-pci,netdev=n${#qemu_cmd[@]}")
                qemu_cmd+=(-netdev "user,id=n${#qemu_cmd[@]},hostfwd=tcp::$host_port-:$guest_port")
            done
        fi

        # Add GUI or console mode
        if [[ "$GUI_MODE" == true ]]; then
            qemu_cmd+=(-vga virtio -display gtk)
            print_status "INFO" "ğŸ–¥ï¸  Starting in GUI mode..."
        else
            qemu_cmd+=(-nographic -serial mon:stdio)
            print_status "INFO" "ğŸ“Ÿ Starting in console mode..."
            print_status "INFO" "ğŸ›‘ Press Ctrl+A then X to exit QEMU console"
        fi

        # Add performance enhancements for software emulation
        qemu_cmd+=(
            -device virtio-balloon-pci
            -object rng-random,filename=/dev/urandom,id=rng0
            -device virtio-rng-pci,rng=rng0
            -no-hpet
            -rtc base=utc,clock=host
        )

        print_status "INFO" "âš¡ Starting QEMU in pure software emulation mode..."
        echo "ğŸ“Š Configuration: ${MEMORY}MB RAM, ${CPUS} CPUs, ${DISK_SIZE} disk"
        
        # Start the VM
        if ! "${qemu_cmd[@]}"; then
            print_status "ERROR" "âŒ Failed to start VM. There might be a problem with the image file or configuration."
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            return 1
        fi
        
        print_status "INFO" "ğŸ›‘ VM $vm_name has been shut down"
    fi
}

# Function to start Proxmox in Docker
start_proxmox_docker() {
    local vm_name=$1
    
    print_status "INFO" "ğŸ³ Starting Proxmox VE in Docker container..."
    
    # Check if container already exists
    if docker ps -a --format '{{.Names}}' | grep -q "^proxmoxve$"; then
        print_status "INFO" "ğŸ“¦ Proxmox container already exists"
        
        # Check if container is running
        if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
            print_status "INFO" "âœ… Proxmox container is already running"
            print_status "INFO" "ğŸŒ Access Proxmox at: https://localhost:8006"
            print_status "INFO" "ğŸ‘¤ Username: root"
            print_status "INFO" "ğŸ”‘ Password: proxmox"
            return 0
        else
            print_status "INFO" "ğŸ”„ Starting existing Proxmox container..."
            docker start proxmoxve
        fi
    else
        print_status "INFO" "ğŸ“¦ Creating new Proxmox container..."
        
        # Pull the image if not exists
        if ! docker images | grep -q "rtedpro/proxmox"; then
            print_status "INFO" "ğŸ“¥ Pulling Proxmox Docker image..."
            docker pull rtedpro/proxmox:9.0.11
        fi
        
        # Run the container
        docker run -itd \
            --name proxmoxve \
            --hostname pve \
            -p 8006:8006 \
            --privileged \
            --restart unless-stopped \
            rtedpro/proxmox:9.0.11
    fi
    
    # Wait for container to start
    sleep 5
    
    # Check if container is running
    if docker ps --format '{{.Names}}' | grep -q "^proxmoxve$"; then
        print_status "SUCCESS" "âœ… Proxmox container started successfully!"
        print_status "INFO" "ğŸŒ Access Proxmox web interface at: https://localhost:8006"
        print_status "INFO" "ğŸ‘¤ Username: root"
        print_status "INFO" "ğŸ”‘ Password: proxmox"
        print_status "WARN" "âš ï¸  It may take a few minutes for the web interface to become available"
        
        # Show container logs
        print_status "INFO" "ğŸ“‹ Container logs (last 10 lines):"
        docker logs --tail 10 proxmoxve
    else
        print_status "ERROR" "âŒ Failed to start Proxmox container"
        print_status "INFO" "ğŸ“‹ Checking container logs:"
        docker logs proxmoxve
        return 1
    fi
}

# Function to delete a VM
delete_vm() {
    local vm_name=$1
    
    # Special handling for Proxmox Docker container
    if [[ "$vm_name" == "proxmoxve" ]] || [[ "$vm_name" == "proxmox" ]]; then
        delete_proxmox_docker
        return $?
    fi
    
    print_status "WARN" "âš ï¸  âš ï¸  âš ï¸  This will permanently delete VM '$vm_name' and all its data!"
    read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Are you sure? (y/N): ")" -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        if load_vm_config "$vm_name" 2>/dev/null; then
            # Check if VM is running
            if is_vm_running "$vm_name"; then
                print_status "WARN" "âš ï¸  VM is currently running. Stopping it first..."
                stop_vm "$vm_name"
                sleep 2
            fi
            
            rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$vm_name.conf" 2>/dev/null
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            rm -f "/tmp/qemu-${vm_name}-monitor.sock" 2>/dev/null
            print_status "SUCCESS" "âœ… VM '$vm_name' has been deleted"
        else
            # If config is corrupted, just delete files
            rm -f "$VM_DIR/$vm_name".* 2>/dev/null
            print_status "SUCCESS" "âœ… VM '$vm_name' files have been deleted"
        fi
    else
        print_status "INFO" "ğŸ‘ Deletion cancelled"
    fi
}

# Function to delete Proxmox Docker container
delete_proxmox_docker() {
    print_status "WARN" "âš ï¸  This will permanently delete the Proxmox Docker container and all its data!"
    read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Are you sure? (y/N): ")" -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        # Check if container exists
        if docker ps -a --format '{{.Names}}' | grep -q "^proxmoxve$"; then
            print_status "INFO" "ğŸ›‘ Stopping Proxmox container..."
            docker stop proxmoxve 2>/dev/null
            
            print_status "INFO" "ğŸ—‘ï¸  Removing Proxmox container..."
            docker rm proxmoxve 2>/dev/null
            
            print_status "SUCCESS" "âœ… Proxmox container has been deleted"
        else
            print_status "INFO" "â„¹ï¸  Proxmox container does not exist"
        fi
    else
        print_status "INFO" "ğŸ‘ Deletion cancelled"
    fi
}

