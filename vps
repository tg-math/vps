#!/bin/bash
set -euo pipefail

# =============================
# Enhanced Multi-VM Manager (Pure QEMU Version)
# Created by Tima
# =============================

# Function to display header
display_header() {
    clear
    cat << "EOF"
â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— 
â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘
   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘
   â•šâ•â•   â•šâ•â•â•šâ•â•     â•šâ•â•â•šâ•â•  â•šâ•â•
                                                                                   
                   VM Manager by Tima
                                                                                                       
EOF
    echo
}

# Function to display colored output with emojis
print_status() {
    local type=$1
    local message=$2
    
    case $type in
        "INFO") echo -e "\033[1;34mğŸ“‹ [INFO]\033[0m $message" ;;
        "WARN") echo -e "\033[1;33mâš ï¸  [WARN]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31mâŒ [ERROR]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32mâœ… [SUCCESS]\033[0m $message" ;;
        "INPUT") echo -e "\033[1;36mğŸ¯ [INPUT]\033[0m $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to check if image file is locked
check_image_lock() {
    local img_file=$1
    local vm_name=$2
    
    if lsof "$img_file" 2>/dev/null | grep -q qemu-system; then
        print_status "WARN" "ğŸ”’ Image file $img_file is already in use by another QEMU process"
        local pid=$(lsof "$img_file" 2>/dev/null | grep qemu-system | awk '{print $2}' | head -1)
        if [[ -n "$pid" ]]; then
            print_status "INFO" "ğŸ” Process ID using the image: $pid"
            if ps -p "$pid" -o cmd= | grep -q "$vm_name"; then
                print_status "INFO" "ğŸ¤” This appears to be the same VM already running"
                read -p "$(print_status "INPUT" "ğŸ”„ Kill existing process and restart? (y/N): ")" kill_choice
                if [[ "$kill_choice" =~ ^[Yy]$ ]]; then
                    kill "$pid"
                    sleep 2
                    if kill -0 "$pid" 2>/dev/null; then
                        kill -9 "$pid"
                        print_status "WARN" "âš ï¸  Forcefully terminated process $pid"
                    fi
                    return 0
                else
                    return 1
                fi
            else
                print_status "ERROR" "ğŸš« Another QEMU instance is using this image"
                return 1
            fi
        fi
        return 1
    fi
    
    local lock_file="${img_file}.lock"
    if [[ -f "$lock_file" ]]; then
        print_status "WARN" "ğŸ”’ Lock file found: $lock_file"
        if [[ $(find "$lock_file" -mmin +5 2>/dev/null) ]]; then
            print_status "WARN" "â° Lock file appears stale (older than 5 minutes)"
            read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Remove stale lock file? (y/N): ")" remove_lock
            if [[ "$remove_lock" =~ ^[Yy]$ ]]; then
                rm -f "$lock_file"
                print_status "SUCCESS" "âœ… Removed stale lock file"
                return 0
            else
                return 1
            fi
        fi
        return 1
    fi
    return 0
}

# Function to validate input
validate_input() {
    local type=$1
    local value=$2
    
    case $type in
        "number")
            if ! [[ "$value" =~ ^[0-9]+$ ]]; then
                print_status "ERROR" "âŒ Must be a number"
                return 1
            fi
            ;;
        "size")
            if ! [[ "$value" =~ ^[0-9]+[GgMm]$ ]]; then
                print_status "ERROR" "âŒ Must be a size with unit (e.g., 100G, 512M)"
                return 1
            fi
            ;;
        "port")
            if ! [[ "$value" =~ ^[0-9]+$ ]] || [ "$value" -lt 23 ] || [ "$value" -gt 65535 ]; then
                print_status "ERROR" "âŒ Must be a valid port number (23-65535)"
                return 1
            fi
            ;;
        "name")
            if ! [[ "$value" =~ ^[a-zA-Z0-9_-]+$ ]]; then
                print_status "ERROR" "âŒ VM name can only contain letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
        "username")
            if ! [[ "$value" =~ ^[a-z_][a-z0-9_-]*$ ]]; then
                print_status "ERROR" "âŒ Username must start with a letter or underscore, and contain only letters, numbers, hyphens, and underscores"
                return 1
            fi
            ;;
    esac
    return 0
}

# Function to check dependencies
check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "cloud-localds" "qemu-img" "lsof" "ssh")
    local missing_deps=()
    local optional_deps=("sshpass" "screen")
    local missing_optional=()
    
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            missing_deps+=("$dep")
        fi
    done
    
    for dep in "${optional_deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            missing_optional+=("$dep")
        fi
    done
    
    if [ ${#missing_deps[@]} -ne 0 ]; then
        print_status "ERROR" "ğŸ”§ Missing dependencies: ${missing_deps[*]}"
        print_status "INFO" "ğŸ’¡ On Ubuntu/Debian, try: sudo apt install qemu-system cloud-image-utils wget lsof openssh-client"
        exit 1
    fi
    
    if [ ${#missing_optional[@]} -ne 0 ]; then
        print_status "WARN" "âš ï¸  Optional dependencies missing: ${missing_optional[*]}"
        print_status "INFO" "ğŸ’¡ Install sshpass for automatic SSH password entry:"
        print_status "INFO" "   sudo apt install sshpass screen"
        echo
    fi
}

# Function to cleanup temporary files
cleanup() {
    if [ -f "user-data" ]; then rm -f "user-data"; fi
    if [ -f "meta-data" ]; then rm -f "meta-data"; fi
}

# Function to get all VM configurations
get_vm_list() {
    find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null | sort
}

# Function to load VM configuration
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    
    if [[ -f "$config_file" ]]; then
        unset VM_NAME OS_TYPE CODENAME IMG_URL HOSTNAME USERNAME PASSWORD
        unset DISK_SIZE MEMORY CPUS SSH_PORT GUI_MODE PORT_FORWARDS IMG_FILE SEED_FILE CREATED SSH_KEY
        
        source "$config_file"
        return 0
    else
        print_status "ERROR" "ğŸ“‚ Configuration for VM '$vm_name' not found"
        return 1
    fi
}

# Function to save VM configuration
save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
CODENAME="$CODENAME"
IMG_URL="$IMG_URL"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
PORT_FORWARDS="$PORT_FORWARDS"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
CREATED="$CREATED"
SSH_KEY="${SSH_KEY:-}"
EOF
    
    print_status "SUCCESS" "ğŸ’¾ Configuration saved to $config_file"
}

# Function to create new VM
create_new_vm() {
    print_status "INFO" "ğŸ†• Creating a new VM by Tima"
    
    print_status "INFO" "ğŸŒ Select an OS to set up:"
    local os_options=()
    local i=1
    for os in "${!OS_OPTIONS[@]}"; do
        echo "  $i) $os"
        os_options[$i]="$os"
        ((i++))
    done
    
    while true; do
        read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice (1-${#OS_OPTIONS[@]}): ")" choice
        if [[ "$choice" =~ ^[0-9]+$ ]] && [ "$choice" -ge 1 ] && [ "$choice" -le ${#OS_OPTIONS[@]} ]; then
            local os="${os_options[$choice]}"
            IFS='|' read -r OS_TYPE CODENAME IMG_URL DEFAULT_HOSTNAME DEFAULT_USERNAME DEFAULT_PASSWORD <<< "${OS_OPTIONS[$os]}"
            break
        else
            print_status "ERROR" "âŒ Invalid selection. Try again."
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ·ï¸  Enter VM name (default: $DEFAULT_HOSTNAME): ")" VM_NAME
        VM_NAME="${VM_NAME:-$DEFAULT_HOSTNAME}"
        if validate_input "name" "$VM_NAME"; then
            if [[ -f "$VM_DIR/$VM_NAME.conf" ]]; then
                print_status "ERROR" "âš ï¸  VM with name '$VM_NAME' already exists"
            else
                break
            fi
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ  Enter hostname (default: $VM_NAME): ")" HOSTNAME
        HOSTNAME="${HOSTNAME:-$VM_NAME}"
        if validate_input "name" "$HOSTNAME"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ‘¤ Enter username (default: $DEFAULT_USERNAME): ")" USERNAME
        USERNAME="${USERNAME:-$DEFAULT_USERNAME}"
        if validate_input "username" "$USERNAME"; then
            break
        fi
    done

    while true; do
        read -s -p "$(print_status "INPUT" "ğŸ”‘ Enter password (default: $DEFAULT_PASSWORD): ")" PASSWORD
        PASSWORD="${PASSWORD:-$DEFAULT_PASSWORD}"
        echo
        if [ -n "$PASSWORD" ]; then
            break
        else
            print_status "ERROR" "âŒ Password cannot be empty"
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ’¾ Disk size (default: 20G): ")" DISK_SIZE
        DISK_SIZE="${DISK_SIZE:-20G}"
        if validate_input "size" "$DISK_SIZE"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ§  Memory in MB (default: 2048): ")" MEMORY
        MEMORY="${MEMORY:-2048}"
        if validate_input "number" "$MEMORY"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "âš¡ Number of CPUs (default: 2): ")" CPUS
        CPUS="${CPUS:-2}"
        if validate_input "number" "$CPUS"; then
            break
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ”Œ SSH Port (default: 2222): ")" SSH_PORT
        SSH_PORT="${SSH_PORT:-2222}"
        if validate_input "port" "$SSH_PORT"; then
            if ss -tln 2>/dev/null | grep -q ":$SSH_PORT "; then
                print_status "ERROR" "ğŸš« Port $SSH_PORT is already in use"
            else
                break
            fi
        fi
    done

    while true; do
        read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enable GUI mode? (y/n, default: n): ")" gui_input
        GUI_MODE=false
        gui_input="${gui_input:-n}"
        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
            GUI_MODE=true
            break
        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
            break
        else
            print_status "ERROR" "âŒ Please answer y or n"
        fi
    done

    read -p "$(print_status "INPUT" "ğŸŒ Additional port forwards (e.g., 8080:80, press Enter for none): ")" PORT_FORWARDS

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
    CREATED="$(date)"

    setup_vm_image
    
    save_vm_config
}

# Function to setup VM image
setup_vm_image() {
    print_status "INFO" "ğŸ“¥ Downloading and preparing image..."
    
    mkdir -p "$VM_DIR"
    
    if [[ -f "$IMG_FILE" ]]; then
        print_status "INFO" "âœ… Image file already exists. Skipping download."
    else
        print_status "INFO" "ğŸŒ Downloading image from $IMG_URL..."
        if ! wget --progress=bar:force "$IMG_URL" -O "$IMG_FILE.tmp"; then
            print_status "ERROR" "âŒ Failed to download image from $IMG_URL"
            exit 1
        fi
        mv "$IMG_FILE.tmp" "$IMG_FILE"
    fi
    
    if ! qemu-img resize "$IMG_FILE" "$DISK_SIZE" 2>/dev/null; then
        print_status "WARN" "âš ï¸  Failed to resize disk image. Creating new image with specified size..."
        rm -f "$IMG_FILE"
        qemu-img create -f qcow2 -F qcow2 -b "$IMG_FILE" "$IMG_FILE.tmp" "$DISK_SIZE" 2>/dev/null || \
        qemu-img create -f qcow2 "$IMG_FILE" "$DISK_SIZE"
        if [ -f "$IMG_FILE.tmp" ]; then
            mv "$IMG_FILE.tmp" "$IMG_FILE"
        fi
    fi

    # Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ½Ğ°Ñ cloud-init ĞºĞ¾Ğ½Ñ„Ğ¸Ğ³ÑƒÑ€Ğ°Ñ†Ğ¸Ñ Ğ´Ğ»Ñ root Ğ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ°
    cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
manage_etc_hosts: true

# Ğ Ğ°Ğ·Ñ€ĞµÑˆĞ°ĞµĞ¼ root SSH Ğ´Ğ¾ÑÑ‚ÑƒĞ¿
ssh_pwauth: true
disable_root: false
allow_public_ssh_keys: true

users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    passwd: $(openssl passwd -6 "$PASSWORD" | tr -d '\n')
    ssh_authorized_keys: []
  - name: root
    lock_passwd: false
    passwd: $(openssl passwd -6 "$PASSWORD" | tr -d '\n')
    ssh_authorized_keys: []

chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false

# ĞĞ°ÑÑ‚Ñ€Ğ¾Ğ¹ĞºĞ¸ SSH
ssh_authorized_keys:
  - ""
  
bootcmd:
  - sed -i 's/^#PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config
  - sed -i 's/^PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config
  - sed -i 's/^#PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config
  - sed -i 's/^PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config
  - systemctl restart sshd || service ssh restart || service sshd restart

runcmd:
  - [ sh, -c, 'echo "VM started successfully by Tima"' ]
EOF

    cat > meta-data <<EOF
instance-id: iid-$VM_NAME
local-hostname: $HOSTNAME
EOF

    if ! cloud-localds "$SEED_FILE" user-data meta-data; then
        print_status "ERROR" "âŒ Failed to create cloud-init seed image"
        exit 1
    fi
    
    print_status "SUCCESS" "ğŸ‰ VM '$VM_NAME' created successfully by Tima."
    print_status "INFO" "ğŸ”‘ Login with: username=$USERNAME, password=$PASSWORD"
    print_status "INFO" "ğŸ”‘ Root login: username=root, password=$PASSWORD"
    print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"
    print_status "INFO" "ğŸ”Œ SSH Root: ssh -p $SSH_PORT root@localhost"
}

# Function to start a VM
start_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if ! check_image_lock "$IMG_FILE" "$vm_name"; then
            print_status "ERROR" "ğŸ”’ Cannot start VM: Image file is locked by another process"
            read -p "$(print_status "INPUT" "ğŸ”„ Do you want to force kill all QEMU processes using this image? (y/N): ")" force_kill
            if [[ "$force_kill" =~ ^[Yy]$ ]]; then
                pkill -f "qemu-system.*$IMG_FILE"
                sleep 2
                if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
                    pkill -9 -f "qemu-system.*$IMG_FILE"
                fi
                print_status "SUCCESS" "âœ… Terminated processes using the image"
                rm -f "${IMG_FILE}.lock" 2>/dev/null
            else
                return 1
            fi
        fi
        
        if is_vm_running "$vm_name"; then
            print_status "WARN" "âš ï¸  VM '$vm_name' is already running"
            echo
            echo "ğŸ“‹ What would you like to do?"
            echo "  1) ğŸ”Œ Connect to running VM via SSH"
            echo "  2) ğŸ”„ Restart VM"
            echo "  3) â†©ï¸  Cancel"
            echo
            read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice (1-3): ")" running_choice
            
            case $running_choice in
                1)
                    connect_vm_ssh "$vm_name"
                    return 0
                    ;;
                2)
                    print_status "INFO" "ğŸ”„ Restarting VM..."
                    stop_vm "$vm_name"
                    sleep 2
                    ;;
                3)
                    print_status "INFO" "ğŸ‘ Operation cancelled"
                    return 0
                    ;;
                *)
                    print_status "ERROR" "âŒ Invalid choice"
                    return 1
                    ;;
            esac
        fi
        
        print_status "INFO" "ğŸš€ Starting VM: $vm_name (Managed by Tima)"
        print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"
        print_status "INFO" "ğŸ”Œ SSH Root: ssh -p $SSH_PORT root@localhost"
        print_status "INFO" "ğŸ”‘ Password: $PASSWORD"
        print_status "INFO" "ğŸŒ Running in pure software emulation mode (no KVM)"
        
        if [[ ! -f "$IMG_FILE" ]]; then
            print_status "ERROR" "âŒ VM image file not found: $IMG_FILE"
            return 1
        fi
        
        if [[ ! -f "$SEED_FILE" ]]; then
            print_status "WARN" "âš ï¸  Seed file not found, recreating..."
            setup_vm_image
        fi
        
        local qemu_cmd=(
            qemu-system-x86_64
            -m "$MEMORY"
            -smp "$CPUS"
            -cpu qemu64
            -machine type=pc,accel=tcg
            -drive "file=$IMG_FILE,format=qcow2,if=virtio"
            -drive "file=$SEED_FILE,format=raw,if=virtio"
            -boot order=c
            -device virtio-net-pci,netdev=n0
            -netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22"
        )

        if [[ -n "$PORT_FORWARDS" ]]; then
            IFS=',' read -ra forwards <<< "$PORT_FORWARDS"
            for forward in "${forwards[@]}"; do
                IFS=':' read -r host_port guest_port <<< "$forward"
                qemu_cmd+=(-device "virtio-net-pci,netdev=n${#qemu_cmd[@]}")
                qemu_cmd+=(-netdev "user,id=n${#qemu_cmd[@]},hostfwd=tcp::$host_port-:$guest_port")
            done
        fi

        if [[ "$GUI_MODE" == true ]]; then
            qemu_cmd+=(-vga virtio -display gtk,gl=on)
            print_status "INFO" "ğŸ–¥ï¸  Starting in GUI mode..."
        else
            qemu_cmd+=(-nographic -serial mon:stdio)
            print_status "INFO" "ğŸ“Ÿ Starting in console mode..."
            print_status "INFO" "ğŸ›‘ Press Ctrl+A then X to exit QEMU console"
        fi

        qemu_cmd+=(
            -device virtio-balloon-pci
            -object rng-random,filename=/dev/urandom,id=rng0
            -device virtio-rng-pci,rng=rng0
            -no-hpet
            -rtc base=utc,clock=host
        )

        print_status "INFO" "âš¡ Starting QEMU in pure software emulation mode..."
        echo "ğŸ“Š Configuration: ${MEMORY}MB RAM, ${CPUS} CPUs, ${DISK_SIZE} disk"
        echo "â„¹ï¸  Note: For better performance, consider enabling KVM if your system supports it"
        
        if ! "${qemu_cmd[@]}"; then
            print_status "ERROR" "âŒ Failed to start VM. There might be a problem with the image file or configuration."
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            return 1
        fi
        
        print_status "INFO" "ğŸ›‘ VM $vm_name has been shut down"
    fi
}

# Function to connect to VM via SSH
connect_vm_ssh() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "ğŸ”Œ Connecting to VM '$vm_name' via SSH on port $SSH_PORT..."
            
            echo
            echo "ğŸ“‹ Select user to connect as:"
            echo "  1) ğŸ‘¤ $USERNAME (default user)"
            echo "  2) ğŸ”‘ root (administrator)"
            echo "  3) â†©ï¸  Cancel"
            echo
            read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice (1-3): ")" user_choice
            
            local ssh_user=""
            case $user_choice in
                1)
                    ssh_user="$USERNAME"
                    print_status "INFO" "ğŸ‘¤ Connecting as: $ssh_user"
                    ;;
                2)
                    ssh_user="root"
                    print_status "INFO" "ğŸ”‘ Connecting as: root"
                    ;;
                3)
                    print_status "INFO" "ğŸ‘ Cancelled"
                    return 0
                    ;;
                *)
                    print_status "ERROR" "âŒ Invalid choice"
                    return 1
                    ;;
            esac
            
            print_status "INFO" "ğŸ”‘ Password: $PASSWORD"
            print_status "INFO" "ğŸ’¡ To exit SSH session, type 'exit' or press Ctrl+D"
            echo
            
            if command -v sshpass &> /dev/null; then
                print_status "INFO" "âœ… Using sshpass for automatic authentication"
                
                print_status "INFO" "â³ Waiting for SSH service to be ready..."
                local max_attempts=30
                local attempt=0
                local ssh_ready=false
                
                while [ $attempt -lt $max_attempts ]; do
                    if sshpass -p "$PASSWORD" ssh -o ConnectTimeout=5 -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -p "$SSH_PORT" "$ssh_user@localhost" "echo 'SSH is ready'" 2>/dev/null; then
                        print_status "SUCCESS" "âœ… SSH is ready!"
                        ssh_ready=true
                        break
                    fi
                    attempt=$((attempt + 1))
                    echo -n "."
                    sleep 2
                done
                echo
                
                if [ "$ssh_ready" = false ]; then
                    print_status "WARN" "âš ï¸  SSH is not responding. The VM might still be booting or SSH is not configured correctly."
                    print_status "INFO" "ğŸ’¡ Try connecting manually with: ssh -p $SSH_PORT $ssh_user@localhost"
                    read -p "$(print_status "INPUT" "ğŸ”„ Try to connect anyway? (y/N): ")" force_connect
                    if [[ ! "$force_connect" =~ ^[Yy]$ ]]; then
                        return 1
                    fi
                fi
                
                if [[ -n "${SSH_KEY:-}" ]] && [[ -f "$SSH_KEY" ]]; then
                    print_status "INFO" "ğŸ”‘ Using SSH key authentication"
                    ssh -i "$SSH_KEY" \
                        -o StrictHostKeyChecking=no \
                        -o UserKnownHostsFile=/dev/null \
                        -p "$SSH_PORT" \
                        "$ssh_user@localhost"
                else
                    print_status "INFO" "ğŸšª Opening SSH connection with automatic login..."
                    sshpass -p "$PASSWORD" ssh \
                        -o StrictHostKeyChecking=no \
                        -o UserKnownHostsFile=/dev/null \
                        -o PreferredAuthentications=password \
                        -o PubkeyAuthentication=no \
                        -o ConnectionAttempts=3 \
                        -p "$SSH_PORT" \
                        "$ssh_user@localhost"
                fi
            else
                print_status "WARN" "âš ï¸  sshpass is not installed. Automatic password entry is not available."
                print_status "INFO" "ğŸ’¡ To install sshpass: sudo apt install sshpass"
                echo
                print_status "INFO" "ğŸ”‘ Please enter the password manually when prompted"
                print_status "INFO" "ğŸ“ Password is: $PASSWORD"
                echo
                
                read -p "$(print_status "INPUT" "ğŸ”„ Continue with manual password entry? (y/N): ")" manual_choice
                if [[ "$manual_choice" =~ ^[Yy]$ ]]; then
                    if [[ -n "${SSH_KEY:-}" ]] && [[ -f "$SSH_KEY" ]]; then
                        ssh -i "$SSH_KEY" \
                            -o StrictHostKeyChecking=no \
                            -o UserKnownHostsFile=/dev/null \
                            -p "$SSH_PORT" \
                            "$ssh_user@localhost"
                    else
                        ssh \
                            -o StrictHostKeyChecking=no \
                            -o UserKnownHostsFile=/dev/null \
                            -p "$SSH_PORT" \
                            "$ssh_user@localhost"
                    fi
                fi
            fi
            
            print_status "INFO" "ğŸ‘‹ SSH session closed"
        else
            print_status "ERROR" "âŒ VM '$vm_name' is not running. Please start it first."
            read -p "$(print_status "INPUT" "ğŸš€ Start VM now? (y/N): ")" start_now
            if [[ "$start_now" =~ ^[Yy]$ ]]; then
                start_vm "$vm_name"
            fi
        fi
    fi
}

# Function to connect to VM console
connect_vm_console() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            print_status "INFO" "ğŸ“Ÿ Connecting to VM '$vm_name' console..."
            print_status "INFO" "ğŸ›‘ Press Ctrl+A then X to exit console"
            echo
            
            local qemu_pid=$(pgrep -f "qemu-system.*$IMG_FILE.*-nographic")
            if [[ -n "$qemu_pid" ]]; then
                if command -v screen &> /dev/null; then
                    local pts=$(ps -p "$qemu_pid" -o cmd= | grep -oP 'mon:stdio|/dev/pts/\d+' | head -1)
                    if [[ -n "$pts" ]]; then
                        screen "$pts"
                    else
                        print_status "ERROR" "âŒ Cannot attach to console. The VM might be in GUI mode."
                        print_status "INFO" "ğŸ’¡ Try using SSH connection instead."
                    fi
                else
                    print_status "WARN" "âš ï¸  screen is not installed. Cannot connect to console."
                    print_status "INFO" "ğŸ’¡ Install screen: sudo apt install screen"
                fi
            else
                print_status "ERROR" "âŒ Cannot find console for VM '$vm_name'"
                print_status "INFO" "ğŸ’¡ This VM might be running in GUI mode. Try SSH connection instead."
            fi
        else
            print_status "ERROR" "âŒ VM '$vm_name' is not running"
        fi
    fi
}

# Function to setup SSH key authentication
setup_ssh_key() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if ! is_vm_running "$vm_name"; then
            print_status "ERROR" "âŒ VM '$vm_name' is not running. Please start it first."
            return 1
        fi
        
        print_status "INFO" "ğŸ”‘ Setting up SSH key authentication for VM '$vm_name'..."
        
        local ssh_key_dir="$HOME/.ssh"
        mkdir -p "$ssh_key_dir"
        chmod 700 "$ssh_key_dir"
        
        local ssh_key_file="$ssh_key_dir/id_rsa_vm_$vm_name"
        if [[ ! -f "$ssh_key_file" ]]; then
            print_status "INFO" "ğŸ” Generating SSH key pair..."
            ssh-keygen -t rsa -b 4096 -f "$ssh_key_file" -N "" -C "tima-vm-$vm_name"
            chmod 600 "$ssh_key_file"
            chmod 644 "${ssh_key_file}.pub"
        fi
        
        if ! command -v sshpass &> /dev/null; then
            print_status "ERROR" "âŒ sshpass is required for automatic SSH key setup"
            print_status "INFO" "ğŸ’¡ Install sshpass first, then try again"
            print_status "INFO" "   sudo apt install sshpass"
            return 1
        fi
        
        print_status "INFO" "ğŸ“¤ Copying SSH public key to VM for user $USERNAME..."
        
        sshpass -p "$PASSWORD" ssh-copy-id \
            -o StrictHostKeyChecking=no \
            -o UserKnownHostsFile=/dev/null \
            -o PreferredAuthentications=password \
            -o PubkeyAuthentication=no \
            -p "$SSH_PORT" \
            -i "${ssh_key_file}.pub" \
            "$USERNAME@localhost" 2>/dev/null
        
        if [ $? -eq 0 ]; then
            print_status "SUCCESS" "âœ… SSH key successfully installed for user $USERNAME!"
            
            print_status "INFO" "ğŸ“¤ Copying SSH public key to VM for root..."
            sshpass -p "$PASSWORD" ssh-copy-id \
                -o StrictHostKeyChecking=no \
                -o UserKnownHostsFile=/dev/null \
                -o PreferredAuthentications=password \
                -o PubkeyAuthentication=no \
                -p "$SSH_PORT" \
                -i "${ssh_key_file}.pub" \
                "root@localhost" 2>/dev/null
            
            if [ $? -eq 0 ]; then
                print_status "SUCCESS" "âœ… SSH key successfully installed for root!"
            fi
            
            print_status "INFO" "ğŸ”— You can now connect without password using:"
            print_status "INFO" "   ssh -i $ssh_key_file -p $SSH_PORT $USERNAME@localhost"
            print_status "INFO" "   ssh -i $ssh_key_file -p $SSH_PORT root@localhost"
            
            SSH_KEY="$ssh_key_file"
            save_vm_config
        else
            print_status "ERROR" "âŒ Failed to install SSH key"
            print_status "INFO" "ğŸ’¡ Make sure the VM is fully booted and SSH service is running"
            print_status "INFO" "ğŸ’¡ Check if password authentication is enabled in SSH config"
        fi
    fi
}

# Function to delete a VM
delete_vm() {
    local vm_name=$1
    
    print_status "WARN" "âš ï¸  âš ï¸  âš ï¸  This will permanently delete VM '$vm_name' and all its data!"
    read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Are you sure? (y/N): ")" -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        if load_vm_config "$vm_name"; then
            if is_vm_running "$vm_name"; then
                print_status "WARN" "âš ï¸  VM is currently running. Stopping it first..."
                stop_vm "$vm_name"
                sleep 2
            fi
            
            if [[ -n "${SSH_KEY:-}" ]] && [[ -f "$SSH_KEY" ]]; then
                rm -f "$SSH_KEY" "${SSH_KEY}.pub"
                print_status "INFO" "ğŸ—‘ï¸  Removed SSH key files"
            fi
            
            rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$vm_name.conf" "${IMG_FILE}.lock" 2>/dev/null
            print_status "SUCCESS" "âœ… VM '$vm_name' has been deleted"
        fi
    else
        print_status "INFO" "ğŸ‘ Deletion cancelled"
    fi
}

# Function to show VM info
show_vm_info() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        echo
        print_status "INFO" "ğŸ“Š VM Information: $vm_name"
        echo "ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹"
        echo "ğŸŒ OS: $OS_TYPE"
        echo "ğŸ·ï¸  Hostname: $HOSTNAME"
